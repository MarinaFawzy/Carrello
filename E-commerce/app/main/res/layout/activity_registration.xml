<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/blue"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="118dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:rotation="180"
        android:src="@drawable/shape2"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Full Name:  "
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/Ename"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:paddingStart="10dp"

        android:background="@drawable/shape"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:textColor="@color/black"

        android:textSize="15sp"
        android:layout_marginEnd="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/Eemail"
        android:layout_width="0dp"
        android:layout_height="45dp"

        android:layout_marginTop="52dp"

        android:layout_marginEnd="10dp"
        android:background="@drawable/shape"
        android:drawableRight="@drawable/ic_baseline_email_24"

        android:paddingStart="10dp"
        android:textColor="@color/black"

        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@id/Ename">

    </EditText>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Email   :      "
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="176dp"

        android:fontFamily="sans-serif-condensed"
        android:text="UserName: "
        android:textColor="@color/black"

        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/Euname"
        android:layout_width="0dp"

        android:layout_height="45dp"
        android:layout_marginTop="100dp"

        android:layout_marginEnd="10dp"
        android:background="@drawable/shape"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:paddingStart="10dp"

        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/Ename">

    </EditText>

    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="216dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Job :           "
        android:textColor="@color/black"

        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/Ejob"
        android:layout_width="0dp"
        android:paddingStart="10dp"

        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"

        android:drawableRight="@drawable/job"
        android:textColor="@color/black"
        android:textSize="15sp"

        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toTopOf="@+id/Euname">

    </EditText>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="252dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Birthdate:   "
        android:textColor="@color/black"

        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/edate"
        android:layout_width="0dp"

        android:layout_height="45dp"
        android:paddingStart="10dp"

        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"


        android:editable="false"
        android:focusable="false"
     android:clickable="false"
     android:cursorVisible="false"
        android:drawableRight="@drawable/ic_baseline_date_range_24"
        android:inputType="date"
        android:textColor="@color/black"
        android:textSize="15sp"


        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintTop_toTopOf="@+id/Ejob">

    </EditText>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Phone :       "
        android:textColor="@color/black"

        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/Ephone"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"

        android:background="@drawable/shape"
        android:drawableRight="@drawable/ic_baseline_phone_24"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/guideline1"


        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintTop_toTopOf="@+id/edate">

    </EditText>


    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="356dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Password:   "
        android:textColor="@color/black"

        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
android:id="@+id/epass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/shape"


        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"



        app:layout_constraintTop_toBottomOf="@+id/Ephone"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"

            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/cpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="412dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Confirm Password:"
        android:textColor="@color/black"

        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ecpass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/shape"


        app:layout_constraintEnd_toEndOf="parent"



        android:layout_marginEnd="10dp"

        app:layout_constraintStart_toEndOf="@+id/cpass"
        app:layout_constraintTop_toBottomOf="@+id/epass"
        app:passwordToggleEnabled="true"




        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"

            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button

        android:id="@+id/signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"

        android:capitalize="none"

        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="#1A86F3"



        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpass"
        app:layout_constraintWidth_percent="0.5"
        tools:ignore="MissingConstraints">

    </Button>


    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="40sp"


        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds,MissingConstraints">

        <RadioButton
            android:id="@+id/male"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male">

        </RadioButton>

        <RadioButton
            android:id="@+id/female"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="Female">

        </RadioButton>

    </RadioGroup>

    <Button

        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="64dp"
        android:backgroundTint="@color/white"
        android:capitalize="none"
        android:text="Sign In ?"


        android:textAllCaps="false"


        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/signup"
        app:layout_constraintTop_toBottomOf="@+id/gender" />


</androidx.constraintlayout.widget.ConstraintLayout>
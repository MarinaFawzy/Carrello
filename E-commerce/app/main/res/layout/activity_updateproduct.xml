<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prduct.updateproduct">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Update Product."
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginStart="20dp"

        app:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/nameedit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
android:padding="10dp"
        android:hint="Enter new product  name"
        android:background="@drawable/shape"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/eprice"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_margin="10dp"
        android:padding="10dp"

        android:background="@drawable/shape"

        android:hint="Enter new product price"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameedit" />

    <EditText
        android:id="@+id/equantity"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@drawable/shape"
        android:padding="10dp"

        android:layout_margin="10dp"

        android:hint="Enter new product quantity  "
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eprice" />

    <EditText
        android:id="@+id/ecartid"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:padding="10dp"

        android:hint="Enter new product categoryid"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_margin="10dp"

        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equantity" />

    <Button
        android:id="@+id/updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="152dp"
        android:backgroundTint="#1A86F3"

        android:text="Update product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameedit"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A86F3"
        android:text="Product list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="0.908"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</androidx.constraintlayout.widget.ConstraintLayout>